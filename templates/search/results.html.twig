{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h2>Search</h2>
    <form class="form-inline mb-3" action="{{ path('search_reviews') }}" method="get">
      <input type="text" class="form-control mr-2" name="q" value="{{ query }}" placeholder="Search reviews...">
      <button class="btn btn-primary" type="submit">Search</button>
    </form>

    {% if query is not empty %}
      <p class="text-muted">Mode: {{ mode }}</p>
    {% endif %}

    {% if results is empty and query is not empty %}
      <div class="alert alert-info">No results for "{{ query }}"</div>
    {% endif %}

    <div class="list-group">
    {% for r in results %}
      <a href="{{ path('article_show', {id: r.id}) }}" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">{{ r.movieTitle }}</h5>
          <small>Rating: {{ r.rating ?? 'n/a' }}</small>
        </div>
        <p class="mb-1">{{ r.summary|u.truncate(180, 'â€¦', false) }}</p>
        <small>Director: {{ r.director ?? 'Unknown' }}</small>
      </a>
    {% endfor %}
    </div>
  </div>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}


    {% if articles %}
        <table class="table table-striped">
          
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
                
            </thead>
            <tbody>

                {% for article in articles %}
                <tr>
                <td> {{ article.title }} </td>
                <td>
                    <a href="/article/{{ article.id }}" class="btn btn-light">Show</a>
                </td>
                 </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Sorry you have not articles to display<p>
    {% endif %}       

{% endblock %}
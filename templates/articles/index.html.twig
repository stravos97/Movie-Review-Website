{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}


    {% if articles %}





            <div class="row card-group"  id="articles">
    {% for article in articles %}
                <div class="col-sm-6 mb-3">
                    <div class="card text-center border-primary">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.movieTitle }}</h5>
                            <img class="card-img-top" src="..." alt="Card image cap">
                            <p class="card-text">{{ article.summary }}</p>
                            <a href="/article/{{ article.id }}" class="btn btn-primary">Show</a>
                            <a href="/article/edit/{{ article.id }}" class="btn btn-secondary">Edit</a>
                            <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                </div>
    {% endfor %}
            </div>






    {% else %}
        <p>Sorry you have not articles to display<p>
    {% endif %}       






{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}